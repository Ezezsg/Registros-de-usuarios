@model Registros_de_usuarios.Models.SignIn

@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="card card-container">
        <h3 class="titleLogin">Registrarse</h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @using (Html.BeginForm("SignIn", "Home", FormMethod.Post, new { @class = "form-singin" }))
        {
            <div>
                @Html.TextBoxFor(s => s.Name, new { @class = "form-control", @placeholder = "Name" })
                @Html.ValidationMessageFor(s => s.Name, "", new { @class = "text-danger" })
            </div><br />
            <div>
                @Html.TextBoxFor(s => s.LastName, new { @class = "form-control", @placeholder = "Last name" })
                @Html.ValidationMessageFor(s => s.LastName, "", new { @class = "text-danger" })
            </div><br />
            <div>
                @Html.TextBoxFor(s => s.User, new { @class = "form-control", @placeholder = "User name" })
                @Html.ValidationMessageFor(s => s.User, "", new { @class = "text-danger" })
            </div><br />
            <div>
                @Html.TextBoxFor(s => s.Email, new { @class = "form-control", @placeholder = "Email" })
                @Html.ValidationMessageFor(s => s.Email, "", new { @class = "text-danger" })
            </div><br />
            <div>
                @Html.PasswordFor(s => s.Password, new { @class = "form-control", @placeholder = "Password" })
                @Html.ValidationMessageFor(s => s.Password, "", new { @class = "text-danger" })
            </div><br />
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <p class="errorMessage">@ViewBag.Message</p>
            }
            <input type="submit" value="Registrarse" class="btn btn-signin" />
        }
        @Html.ActionLink("Volver", "Index", "Home")
    </div>
</div>
